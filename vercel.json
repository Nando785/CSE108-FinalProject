{
  "version": 2,
  "builds": [
    { "src": "fits-app/api/index.py", "use": "@vercel/python" },
    { "src": "fits-app/frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "fits-app/api/index.py" },
    { "src": "/assets/(.*)", "dest": "fits-app/frontend/dist/assets/$1" },
    { "src": "/(.*)", "dest": "fits-app/frontend/dist/index.html" }
  ]
}
